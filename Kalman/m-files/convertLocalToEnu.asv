function enu = convertLocalToEnu(local)

%Rotation around the z axis was define thanks to the Linear Dataset
Rz = @(Psi)[cos(Psi), sin(Psi), 0; -sin(Psi), cos(Psi), 0; 0, 0, 1];
enu = (Rz(6/7*pi)\(local'))';

end